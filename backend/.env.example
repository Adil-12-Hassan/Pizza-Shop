# Environment Variables Template
# Copy this file to .env.local and fill in your values

# MongoDB Connection String
# For local development: mongodb://localhost:27017/pizza-shop
# For production: Use MongoDB Atlas connection string
MONGODB_URI=your_mongodb_connection_string_here
vercel secrets add mongodb_uri "your_mongodb_connection_string_here"vercel secrets add mongodb_uri "your_mongodb_connection_string_here"
# If you store the connection string as a Vercel secret, reference it here
# by using the secret name prefixed with an @ sign (example below).
# On Vercel: set a secret named `mongodb_uri` and then set the env value to
# MONGODB_URI=@mongodb_uri
# Add the secret with the Vercel CLI: `vercel secrets add mongodb_uri "<connection-string>"`

# Frontend URL
# Local: http://localhost:3000
# Production: https://your-app.vercel.app
FRONTEND_URL=http://localhost:3000

# Backend URL  
# Local: http://localhost:5000
# Production: https://your-api.vercel.app
BACKEND_URL=http://localhost:5000

# Node Environment
NODE_ENV=development
